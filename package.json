{
  "name": "koa2-swagger-ui",
  "version": "0.0.0-placeholder",
  "description": "Swagger UI middleware for koa",
  "source": "lib/index.ts",
  "main": "./koa2-swagger-ui.js",
  "typings": "./index.d.ts",
  "scripts": {
    "start": "ts-node -O '{\"module\": \"commonjs\"}' test/example.ts",
    "lint": "tslint -t stylish -p .",
    "lint:fix": "tslint -p tsconfig.json -t stylish --fix 'src/**/*.ts' 'test/**/*.ts'",
    "prebuild": "rimraf dist",
    "postbuild": "cp lib/index.hbs dist && cp lib/favicon-32x32.png dist && cp lib/favicon-16x16.png dist && cp package.json dist && cp LICENSE dist && cp README.md dist",
    "build": "microbundle build --target node --format=cjs -o dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:prod": "npm run test -- --coverage --no-cache",
    "travis-deploy-once": "travis-deploy-once",
    "semantic-release": "cd dist && semantic-release"
  },
  "dependencies": {
    "handlebars": "^4.0.12",
    "lodash": "^4.17.11",
    "read-pkg-up": "^4.0.0"
  },
  "peerDependencies": {
    "koa": "^2.5.3"
  },
  "devDependencies": {
    "@types/handlebars": "4.0.39",
    "@types/jest": "23.3.9",
    "@types/koa": "2.0.46",
    "@types/koa-router": "7.0.34",
    "@types/lodash": "4.14.118",
    "@types/node": "10.12.9",
    "@types/read-pkg-up": "^3.0.1",
    "@types/supertest": "2.0.6",
    "inquirer": "6.2.0",
    "jest": "23.6.0",
    "koa": "2.6.2",
    "koa-router": "7.4.0",
    "microbundle": "0.7.0",
    "rimraf": "2.6.2",
    "semantic-release": "15.12.0",
    "supertest": "3.3.0",
    "swagger-ui-dist": "3.20.0",
    "travis-deploy-once": "5.0.9",
    "ts-jest": "23.10.4",
    "ts-node": "7.0.1",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.16.0",
    "tslint-xo": "0.10.0",
    "typescript": "3.1.6"
  },
  "release": {
    "branch": "master"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverage": true
  },
  "homepage": "https://github.com/scttcper/koa2-swagger-ui",
  "repository": "scttcper/koa2-swagger-ui",
  "keywords": [
    "swagger",
    "docs",
    "swagger-ui",
    "koa",
    "koa2",
    "middleware"
  ],
  "license": "MIT"
}
